<%= form_with(model: tarea) do |form| %>
  <% if tarea.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tarea.errors.count, "error") %> prohibited this tarea from being saved:</h2>

      <ul>
        <% tarea.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descripcion, style: "display: block" %>
    <%= form.text_area :descripcion %>
  </div>

  <div>
    <%= form.label :completado, style: "display: block" %>
    <%= form.check_box :completado %>
  </div>

  <div>
    <%= form.label :usuario_id, "Usuario" %>
    <%= form.collection_select :usuario_id, Usuario.all, :id, :nombre, prompt: "Selecciona un usuario" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
